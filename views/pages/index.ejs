<!DOCTYPE html>
<html>
<head>
  <% include ../partials/header.ejs %>
  <!-- <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
  <link rel="stylesheet" href="/resources/demos/style.css"> -->
  <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
  <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
  <style>
    body {
      background-color: #888888;
    }
    .job-posts {

    }
    .job-post {
      width: 60%;
      background-color: white;
      margin-left: auto;
      margin-right: auto;
      margin-bottom: 30px;
      margin-top: 30px;
      box-shadow: 10px 10px 5px grey;
      
      
    }
    .jp-header {
      
      height: 70px; 
      background-color: #51aa1b;
    }
    .jp-header-h3 {
      transform:translate(30px, 5px);
      

    }
    
  </style>
</head>
<body>
  
  <!-- a source to logo src mapping -->
  <% var urls = {"indeed" : "img/indeed.png"} %>
<div class="container">
  <!-- replace the returns here -->
  <div id="job-posts">
      <% for(var i in locals){
            if (typeof locals[i].jobtitle === 'undefined') continue; %>
    <div class="job-post">
      <div class="jp-header">
        <h3 class="jp-header-h3"><%=locals[i].jobtitle%></h3>
        
      </div>
      <p class="listed-by"><%=locals[i].company%></p>
      <div class="post-content">
        <svg class="job-profile"></svg>
        <a href=<%=locals[i].url%>> <button>Apply!</button> </a>
      </div>
    </div>
      <%}%>
  </div>
  <button>Learn more about different careers</button>



</div>
</body>
</html>
